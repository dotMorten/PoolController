            </NavigationViewItem>
            <NavigationViewItem Content="Sensors" Tag="SamplePage2" >
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE957;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="MQTT" Tag="SamplePage3" x:Name="MqttSettings" >
                <NavigationViewItem.Icon>
                    <ImageIcon Source="/Assets/mqtt-icon.png" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="WiFi" Tag="SamplePage4" >
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE701;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Update" Tag="SamplePage4" >
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xEBD3;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>
        <NavigationView.FooterMenuItems>
            <NavigationViewItem Content="About" Icon="Help" />
        </NavigationView.FooterMenuItems>

