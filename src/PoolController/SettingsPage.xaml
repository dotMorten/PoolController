<Page x:Class="PoolController.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:PoolController"
       xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <ScrollViewer IsTabStop="True">
      <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center" Orientation="Horizontal">
                <controls:SettingsCard Header="Pump" VerticalAlignment="Top" Width="200">
                    <TextBox Text="{x:Bind Settings.PumpComPort, Mode=TwoWay}" Header="Serial Port" />
                </controls:SettingsCard>
                <controls:SettingsCard Header="MQTT" VerticalAlignment="Top" Width="200"
                                       Description="Configure broadcasting to an MQTT broker">
                    <controls:SettingsCard.HeaderIcon>
                        <BitmapIcon UriSource="ms-appx:///Assets/mqtt-icon.png" />
                    </controls:SettingsCard.HeaderIcon>
                    <StackPanel>
                        <TextBox Text="{x:Bind Settings.MqttBrokerAddress, Mode=TwoWay}" Header="Address" />
                        <TextBox Text="{x:Bind Settings.MqttUsername, Mode=TwoWay}" Header="Username" />
                        <TextBox Text="{x:Bind Settings.MqttPassword, Mode=TwoWay}" Header="Password" />
                        <ToggleSwitch IsOn="{x:Bind Settings.EnableMqtt, Mode=TwoWay}" OnContent="Enabled" OffContent="Disabled" />
                        <Button Content="Apply" />
                    </StackPanel>
                </controls:SettingsCard>
            </StackPanel>
  </ScrollViewer>
</Page>
